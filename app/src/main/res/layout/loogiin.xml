<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/log1"
    android:fillViewport="true"
    android:background="#bb99bb">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maqaa"
        android:id="@+id/mq1"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/seni1" />
    <EditText
        android:id="@+id/user"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:hint="simeeraa"
        android:gravity="center"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/mq1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pass1"
        android:text="Irrigataa"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/user"
        android:layout_alignStart="@+id/mq1" />
    <EditText
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/pass4"
        android:hint="******"
        android:layout_alignBottom="@+id/pass1"
        android:layout_alignStart="@+id/user" />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Seeni"
        android:id="@+id/seni1"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/gradient"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_below="@+id/pass4"
        android:layout_centerHorizontal="true"
        android:onClick="login"/>
</RelativeLayout>