<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#bb99bb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/shaw"
            android:id="@+id/shaw"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_alignTop="@+id/wll"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/wll"
            android:id="@+id/wll"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:onClick="ufata"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/jmm"
            android:id="@+id/jmm"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/shaw"
            android:layout_alignStart="@+id/shaw" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/hrr"
            android:id="@+id/hrr"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_above="@+id/bll"
            android:layout_alignStart="@+id/wll" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/bll"
            android:id="@+id/bll"
            android:gravity="center"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/jmm"
            android:layout_alignStart="@+id/jmm" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/gjj"
            android:id="@+id/gjj"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignTop="@+id/bll"
            android:layout_alignStart="@+id/hrr"
            android:onClick="ufata"/>

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/brr"
            android:id="@+id/brr"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/bll"
            android:layout_alignStart="@+id/bll" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/arr"
            android:id="@+id/arr"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/brr"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/kmm"
            android:id="@+id/kmm"
            android:background="@drawable/gradient"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="ufata"
            android:layout_alignTop="@+id/brr"
            android:layout_alignStart="@+id/gjj" />

    </RelativeLayout>

</ScrollView>