<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb99bb">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LAKK.1FFAA"
        android:gravity="center"
        android:layout_alignTop="@+id/mult2"
        android:layout_alignParentStart="true"
        android:id="@+id/mult1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LAKK. 2FFAA"
        android:id="@+id/mult2"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/mult3" />

    <EditText
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:hint="DEEBII"
        android:id="@+id/mult3"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp" />
    <TextView
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:text="="
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignTop="@+id/mult3"
        android:layout_toStartOf="@+id/mult3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/mult4"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/mult3"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAKK.1FFAA"
        android:id="@+id/mult5"
        android:gravity="center"
        android:layout_alignTop="@+id/mult4"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAKK.2FFAA"
        android:id="@+id/mult6"
        android:gravity="center"
        android:layout_alignTop="@+id/mult5"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALLEESSI"
        android:id="@+id/mult7"
        android:gravity="center"
        android:layout_below="@+id/mult6"
        android:layout_marginTop="20sp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/mult4"
        android:layout_alignParentStart="true" />
</RelativeLayout>