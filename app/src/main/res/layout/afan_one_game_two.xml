<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#bb99bb"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAPHA 1FFAA"
        android:id="@+id/merry1"
        android:background="@drawable/gradient"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/merry2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAPHA 2FFAA"
        android:id="@+id/merry2"
        android:background="@drawable/gradient"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/merry1"
        android:layout_alignStart="@+id/merry3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAPHA 3FFAA"
        android:id="@+id/merry3"
        android:background="@drawable/gradient"
        android:textColor="#000000"
        android:layout_below="@+id/merry2"
        android:layout_marginTop="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>