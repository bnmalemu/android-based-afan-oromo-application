<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#bb99bb">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LAKK.1FFAA"
        android:gravity="center"
        android:layout_alignTop="@+id/add2"
        android:layout_alignParentStart="true"
        android:id="@+id/add1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LAKK. 2FFAA"
        android:id="@+id/add2"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/add3" />

    <EditText
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:hint="DEEBII"
        android:id="@+id/add3"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp" />
    <TextView
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:text="="
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignTop="@+id/add3"
        android:layout_toStartOf="@+id/add3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add4"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/add3"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAKK.1FFAA"
        android:gravity="center"
        android:id="@+id/add5"
        android:layout_alignTop="@+id/add4"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAKK.2FFAA"
        android:gravity="center"
        android:id="@+id/add6"
        android:layout_alignTop="@+id/add5"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALLEESSI"
        android:id="@+id/add7"
        android:layout_centerVertical="true"
        android:layout_below="@id/add6"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_alignEnd="@+id/add4"
        android:layout_alignParentStart="true" />

</RelativeLayout>