<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#bb99bb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="A"
            android:id="@+id/dh1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_above="@+id/ny1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="U"
            android:id="@+id/ts1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/jam3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="O"
            android:id="@+id/ny1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/sh1"
            android:layout_alignStart="@+id/sh1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="E"
            android:id="@+id/sh1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_marginStart="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="I"
            android:id="@+id/ph1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_alignTop="@+id/ny1"
            android:layout_alignEnd="@+id/ts1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/jam1"
            android:textSize="50sp"
            android:layout_alignTop="@+id/jam3"
            android:layout_alignEnd="@+id/sh1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/jam2"
            android:textSize="50sp"
            android:layout_alignTop="@+id/jam5"
            android:layout_alignStart="@+id/jam3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/jam3"
            android:textSize="50sp"
            android:layout_marginBottom="104dp"
            android:layout_above="@+id/jam2"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/jam4"
            android:textSize="50sp"
            android:layout_below="@+id/jam1"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/jam5"
            android:textSize="50sp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/jam1"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>


</ScrollView>